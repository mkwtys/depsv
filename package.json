{
  "name": "depsv",
  "version": "0.0.0",
  "description": "",
  "license": "MIT",
  "author": "",
  "main": "index.js",
  "bin": {
    "depsv": "./bin/depsv.js"
  },
  "scripts": {
    "build": "npm-run-all clean:build -p build:{js,types}",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\"",
    "build:types": "tsc --emitDeclarationOnly",
    "clean:build": "rimraf lib",
    "coverage": "jest --coverage",
    "test": "jest",
    "test:update": "jest -u",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "watch": "npm-run-all clean:build -p watch:{js,types}",
    "watch:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --watch",
    "watch:types": "tsc --emitDeclarationOnly --watch"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 10
          },
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/"
    ]
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "core-js": "^3.6.5",
    "package-json": "^6.5.0",
    "path-exists": "^4.0.0",
    "read-pkg": "^5.2.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@babel/cli": "7.10.1",
    "@babel/preset-env": "7.10.2",
    "@babel/preset-typescript": "7.10.1",
    "@types/jest": "25.2.3",
    "@types/node": "14.0.9",
    "jest": "26.0.1",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "strip-ansi": "6.0.0",
    "typescript": "3.9.3"
  }
}
