{
  "name": "depsv",
  "version": "0.0.0",
  "description": "",
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "index.js",
  "bin": {
    "depsv": "./bin/depsv.js"
  },
  "scripts": {
    "build": "npm-run-all clean:build -p build:{js,types}",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\"",
    "build:types": "tsc --emitDeclarationOnly",
    "clean:build": "rimraf lib",
    "coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:update": "cross-env NODE_OPTIONS=--experimental-vm-modules jest -u",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "watch": "npm-run-all clean:build -p watch:{js,types}",
    "watch:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --watch",
    "watch:types": "tsc --emitDeclarationOnly --watch"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 12
          },
          "modules": false
        }
      ]
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "core-js": "^3.15.2",
    "package-json": "^7.0.0",
    "path-exists": "^4.0.0",
    "read-pkg": "^6.0.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@babel/cli": "7.14.8",
    "@babel/preset-env": "7.14.8",
    "@babel/preset-typescript": "7.14.5",
    "@types/jest": "26.0.24",
    "@types/node": "16.3.2",
    "cross-env": "7.0.3",
    "jest": "27.0.6",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "strip-ansi": "7.0.0",
    "typescript": "4.3.5"
  }
}
